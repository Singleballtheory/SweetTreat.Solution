@{
  Layout = "_Layout";
}

@model SweetTreat.Models.Treat

<h4>What treats are you adding?</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)
    <br>
    @Html.Label("Tastes like?")
    @Html.DropDownList("FlavorId")
    <br>
    <input type="submit" value="Add new Treat!" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all Treats", "Index")</p>